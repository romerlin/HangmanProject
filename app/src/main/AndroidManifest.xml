<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hangman">

    <!-- Permissions (if needed in the future) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hangman">

        <!-- Main activity (entry point of the app) -->
        <activity android:name=".MainActivity"
            android:exported="true"> <!-- This line is the fix -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Game activity (handles the gameplay) -->
        <activity android:name=".GameActivity"
            android:exported="false" /> <!-- Not exported, only accessed within the app -->

        <!-- Score activity (displays the user's score) -->
        <activity android:name=".ScoreActivity"
            android:exported="false" /> <!-- Not exported, only accessed within the app -->

    </application>

</manifest>
