<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EDEDED"
    android:gravity="center_horizontal">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBackToMain"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_to_main"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp" />

    <!-- Word Display -->
    <TextView
        android:id="@+id/wordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_ _ _ _ _ _ _"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:letterSpacing="0.2"
        android:layout_marginBottom="24dp" />


    <!-- Timer (Visible in Timed Mode Only) -->
    <TextView
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 30s"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginBottom="16dp" />

    <!-- Score Display -->
    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:layout_marginBottom="8dp" />

    <!-- Coins Display -->
    <TextView
        android:id="@+id/coinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins: 0"
        android:textSize="18sp"
        android:textColor="#FF9800"
        android:layout_marginBottom="8dp" />

    <!-- Tickets Display -->
    <TextView
        android:id="@+id/ticketView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Tickets: 0"
        android:textColor="#673AB7"
        android:textSize="18sp" />

    <!-- Guessed Letters -->
    <TextView
        android:id="@+id/guessedLettersView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guessed Letter: []"
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginBottom="16dp" />

    <!-- Letter Input -->
    <EditText
        android:id="@+id/inputLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a letter"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text" />

    <!-- Guess Button -->
    <Button
        android:id="@+id/btnGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guess"
        android:backgroundTint="#FF6F61"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Hint Button -->
    <Button
        android:id="@+id/btnHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Hint"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />


</LinearLayout>
